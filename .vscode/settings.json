{
  // TypeScript: Pakai versi dari node_modules (sudah kamu punya)
  "typescript.tsdk": "node_modules/.pnpm/typescript@5.0.4/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // ğŸ“ Format & Encoding
  "files.eol": "\n", // Simpan file pakai LF, bukan CRLF
  "files.encoding": "utf8", // Simpan file tanpa BOM
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true, // Format otomatis saat save

  // ğŸ¯ Khusus untuk file Markdown & MDX
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Optional: tambahkan formatOnSave untuk file lain jika diinginkan
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  }
}
